@model InventoryManagementSystem.Models.Category

@{
    ViewData["Title"] = "Details Category";
}

<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#0">Categories</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewBag.Title
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="card-style mb-30 row">
        <div class="input-style-1 mb-2 col-4">
            <label asp-for="CategoryCode"></label>
            <input asp-for="CategoryCode" placeholder="Category Code" readonly />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" placeholder="Category Name" readonly />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label asp-for="Description"></label>
            <input asp-for="Description" placeholder="Description" readonly />
        </div>
        <div class="col-12 mt-2 d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.IdCategory" type="button" class="main-btn info-btn rounde-sm btn-hover">Edit</a>
        </div>
        <div class="col-12 mt-2 d-flex gap-2">
            <a asp-action="Index" type="button" class="main-btn primary-btn rounde-sm btn-hover">Back To List</a>
        </div>
    </div>
</div>

